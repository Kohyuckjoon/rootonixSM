<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dialog.DialogFailFragment">

    <ImageView
        android:id="@+id/analysis_failure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/analysis_failure">
    </ImageView>

    <TextView
        android:id="@+id/reason_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 실패 사유 -"
        android:textColor="#ffff0000"
        app:layout_constraintStart_toStartOf="@+id/analysis_failure"
        app:layout_constraintEnd_toEndOf="@+id/analysis_failure"
        app:layout_constraintTop_toTopOf="@+id/analysis_failure"
        app:layout_constraintBottom_toBottomOf="@+id/analysis_failure"
        android:layout_marginTop="200dp">
    </TextView>
    <TextView
        android:id="@+id/reason_fail_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 품질 저하"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/reason_fail"
        app:layout_constraintEnd_toEndOf="@+id/reason_fail"
        app:layout_constraintTop_toBottomOf="@+id/reason_fail"
        android:layout_marginTop="30dp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>