<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CompEvaluationFragment"
    android:background="@color/black"
    android:id="@+id/comp_evaluation_fragment">

    <ImageView
        android:id="@+id/comp_evaluation_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/comp_evaluation_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <FrameLayout
        android:id="@+id/kuserNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_background"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/kuser_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="test">
        </TextView>

    </FrameLayout>
    <FrameLayout
        android:id="@+id/kuserTelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/kuserNameTitle"
        app:layout_constraintStart_toStartOf="@+id/kuserNameTitle"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/kuser_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:text="010-****-1234">
        </TextView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/contour1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/kuserTelTitle"
        app:layout_constraintTop_toTopOf="@+id/kuserTelTitle"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text=" | ">
        </TextView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/kuserBirthDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/contour1"
        app:layout_constraintTop_toTopOf="@+id/contour1"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/kuser_birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:text="66세">
        </TextView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/contour2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/kuserBirthDateTitle"
        app:layout_constraintTop_toTopOf="@+id/kuserBirthDateTitle"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text=" | ">
        </TextView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/kuserSexTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/contour2"
        app:layout_constraintTop_toTopOf="@+id/contour2"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/kuser_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:text="성별">
        </TextView>
    </FrameLayout>


    <ImageView
        android:id="@+id/item_evaluation_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        app:layout_constraintEnd_toStartOf="@+id/evaluation_contour"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/item_evaluation_font">
    </ImageView>
    <ImageView
        android:id="@+id/evaluation_contour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/item_evaluation_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/evaluation_contour">
    </ImageView>
    <ImageView
        android:id="@+id/comprehensive_evaluation_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/evaluation_contour"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/comprehensive_evaluation_on">
    </ImageView>

    <FrameLayout
        android:id="@+id/service_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_background"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/service_logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/service_logout">
        </ImageView>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/changing_information_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_background"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/changing_information_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="120dp"
            android:src="@drawable/changing_information_icon">
        </ImageView>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/measurement_select_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_background"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/measurement_service_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="200dp"
            android:src="@drawable/measurement_select_service">
        </ImageView>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scalp_text_layout"
        android:layout_width="440dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        app:layout_constraintStart_toEndOf="@+id/comp_evaluation_contents"
        app:layout_constraintEnd_toStartOf="@+id/comp_evaluation_contents_expert"
        android:layout_marginTop="130dp">

        <TextView
            android:id="@+id/tv_scalp_front_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍*동 님은"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_marginRight="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/trouble_scalp_font"
            app:layout_constraintBaseline_toBaselineOf="@+id/trouble_scalp_font"/>

        <TextView
            android:id="@+id/trouble_scalp_font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="두피 유형"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/tv_scalp_front_head"
            app:layout_constraintEnd_toStartOf="@id/tv_scalp_front_tail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintWidth_max="320dp"
            />

        <TextView
            android:id="@+id/tv_scalp_front_tail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입니다."
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/trouble_scalp_font"
            app:layout_constraintBaseline_toBaselineOf="@+id/trouble_scalp_font"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.planuri.rootonixsmartmirror.util.graphic.AnimatedRadarChartImageView
        android:id="@+id/iv_radar_chart_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_radar_white_b"
        app:layout_constraintEnd_toStartOf="@+id/comp_evaluation_contents_expert"
        app:layout_constraintStart_toEndOf="@+id/comp_evaluation_contents"
        app:layout_constraintTop_toBottomOf="@+id/scalp_text_layout">
    </com.planuri.rootonixsmartmirror.util.graphic.AnimatedRadarChartImageView>
    <LinearLayout
        android:id="@+id/scalp_type_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_radar_chart_big"
        app:layout_constraintStart_toEndOf="@+id/comp_evaluation_contents"
        app:layout_constraintEnd_toStartOf="@+id/comp_evaluation_contents_expert"
        android:orientation="horizontal"
        android:layout_marginTop="45dp">
        <TextView
            android:id="@+id/tv_scalp_type_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="step"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_scalp_type_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="두피 타입"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textColor="#5E72E9">
        </TextView>
        <TextView
            android:id="@+id/tv_scalp_type_tail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유형"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_product_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_product_recommend"
        app:layout_constraintTop_toBottomOf="@+id/scalp_type_layout"
        app:layout_constraintEnd_toStartOf="@+id/comp_evaluation_contents_expert"
        app:layout_constraintStart_toEndOf="@+id/comp_evaluation_contents"
        android:layout_marginTop="30dp">
    </ImageView>

    <ImageView
        android:id="@+id/comp_evaluation_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_background"
        android:src="@drawable/comp_evaluation_contents_444">
    </ImageView>
    <ScrollView
        android:id="@+id/total_desc_scroll"
        android:layout_width="500dp"
        android:layout_height="370dp"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_contents"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_contents"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/total_desc"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/comp_evaluation_contents"
            app:layout_constraintTop_toTopOf="@+id/comp_evaluation_contents"
            android:scrollbars="vertical"
            android:textSize="18sp">
        </TextView>
    </ScrollView>
    <LinearLayout
        android:id="@+id/medical_advisor_text_layout"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/comp_evaluation_contents"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_background"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_medical_advisor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="메디컬 어드바이저"/>
        <TextView
            android:id="@+id/tv_medical_advisor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50dp"
            android:lineSpacingExtra="10sp"
            android:background="@color/black"
            android:text="&quot;상기 종합평가 의견은 다수의 전문의들이 직접 보고 판단한 데이터를 기반으로 생성된 인공지능 분석 결과 내용입니다.&quot;\n
※ 본 A.I 알고리즘은 ROOTONIX 특허 출원 되었으며 법적으로 보호받고 있습니다."/>
    </LinearLayout>

    <ImageView
        android:id="@+id/comp_evaluation_contents_expert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_background"
        android:src="@drawable/comp_evaluation_contents_expert">
    </ImageView>

    <ScrollView
        android:layout_width="520dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_contents_expert"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_contents_expert"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_contents_expert"
        android:layout_marginTop="45dp">

        <TextView
            android:id="@+id/expert_suggest"
            android:layout_width="520dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/comp_evaluation_contents_expert"
            app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_contents_expert"
            app:layout_constraintTop_toTopOf="@+id/comp_evaluation_contents_expert"
            android:textSize="18sp">
        </TextView>
    </ScrollView>



    <ImageView
        android:id="@+id/tip1"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tip2"
        app:layout_constraintEnd_toEndOf="@+id/tip2"
        app:layout_constraintBottom_toTopOf="@+id/tip2"
        android:layout_marginBottom="8dp"
        android:src="@drawable/tip1">
    </ImageView>

    <ScrollView
        android:layout_width="470dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@+id/tip1"
        app:layout_constraintEnd_toEndOf="@+id/tip1"
        app:layout_constraintBottom_toBottomOf="@+id/tip1"

        android:layout_marginBottom="25dp">
        <TextView
            android:id="@+id/expert_suggest1"
            android:layout_width="470dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp">
        </TextView>
    </ScrollView>

    <ImageView
        android:id="@+id/tip2"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_contents_expert"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_contents_expert"
        app:layout_constraintBottom_toBottomOf="@+id/comp_evaluation_contents_expert"
        android:layout_marginBottom="8dp"
        android:src="@drawable/tip2">
    </ImageView>

    <ScrollView
        android:layout_width="450dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/tip2"
        app:layout_constraintEnd_toEndOf="@id/tip2"
        app:layout_constraintBottom_toBottomOf="@id/tip2"
        android:layout_marginBottom="25dp">
        <TextView
            android:id="@+id/expert_suggest2"
            android:layout_width="470dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp">
        </TextView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>