<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CompEvaluationFragment"
    android:background="@color/black"
    android:id="@+id/comp_evaluation_fragment">

    <ImageView
        android:id="@+id/comp_evaluation_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/comp_evaluation_background">
    </ImageView>

    <FrameLayout
        android:id="@+id/kuserNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_background"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/kuser_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="test">
        </TextView>

    </FrameLayout>
    <FrameLayout
        android:id="@+id/kuserTelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/kuserNameTitle"
        app:layout_constraintStart_toStartOf="@+id/kuserNameTitle"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/kuser_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:text="010-****-1234">
        </TextView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/contour1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/kuserTelTitle"
        app:layout_constraintTop_toTopOf="@+id/kuserTelTitle"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text=" | ">
        </TextView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/kuserBirthDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/contour1"
        app:layout_constraintTop_toTopOf="@+id/contour1"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/kuser_birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:text="66세">
        </TextView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/contour2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/kuserBirthDateTitle"
        app:layout_constraintTop_toTopOf="@+id/kuserBirthDateTitle"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text=" | ">
        </TextView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/kuserSexTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/contour2"
        app:layout_constraintTop_toTopOf="@+id/contour2"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/kuser_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:text="성별">
        </TextView>
    </FrameLayout>


    <ImageView
        android:id="@+id/item_evaluation_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        app:layout_constraintEnd_toStartOf="@+id/evaluation_contour"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/item_evaluation_font">
    </ImageView>
    <ImageView
        android:id="@+id/evaluation_contour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/item_evaluation_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/evaluation_contour">
    </ImageView>
    <ImageView
        android:id="@+id/comprehensive_evaluation_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/evaluation_contour"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/comprehensive_evaluation_on">
    </ImageView>

    <FrameLayout
        android:id="@+id/service_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_background"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/service_logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/service_logout">
        </ImageView>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/changing_information_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_background"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/changing_information_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="120dp"
            android:src="@drawable/changing_information_icon">
        </ImageView>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/measurement_select_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_background"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/measurement_service_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="200dp"
            android:src="@drawable/measurement_select_service">
        </ImageView>
    </FrameLayout>

<!--    <ImageView-->
<!--        android:id="@+id/trouble_scalp_font"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/trouble_scalp_font"-->
<!--        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"-->
<!--        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_background"-->
<!--        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_background"-->
<!--        android:layout_marginTop="130dp">-->
<!--    </ImageView>-->

    <TextView
        android:id="@+id/trouble_scalp_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약한 트러블 탈모 두피"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_background"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_background"
        android:layout_marginTop="130dp">
    </TextView>

<!--    <ImageView-->
<!--        android:id="@+id/comp_evaluation_scalp"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintTop_toTopOf="@+id/trouble_scalp_font"-->
<!--        android:layout_marginTop="40dp"-->
<!--        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_background"-->
<!--        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_background"-->
<!--        android:src="@drawable/comp_evaluation_scalp_re">-->
<!--    </ImageView>-->
    <ImageView
        android:id="@+id/comp_evaluation_scalp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/trouble_scalp_font"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_background"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_background"
        android:src="@drawable/pore_blank">
    </ImageView>
    <ImageView
        android:id="@+id/pore_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_scalp"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_scalp"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_scalp"
        app:layout_constraintBottom_toBottomOf="@+id/comp_evaluation_scalp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/pore_20">

    </ImageView>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/pore_total"
        app:layout_constraintEnd_toEndOf="@+id/pore_total"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_scalp"
        app:layout_constraintBottom_toBottomOf="@+id/comp_evaluation_scalp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="5dp"
        android:text="0"
        android:textSize="45sp"
        android:textColor="@color/white">

    </TextView>

    <ImageView
        android:id="@+id/comp_evaluation_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_background"
        android:src="@drawable/comp_evaluation_contents">
    </ImageView>

    <ScrollView
        android:layout_width="500dp"
        android:layout_height="460dp"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_contents"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_contents"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/total_desc"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/comp_evaluation_contents"
            app:layout_constraintTop_toTopOf="@+id/comp_evaluation_contents"
            android:scrollbars="vertical"
            android:textSize="18sp">
        </TextView>
    </ScrollView>

    <ImageView
        android:id="@+id/comp_evaluation_contents_expert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_background"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_background"
        android:src="@drawable/comp_evaluation_contents_expert">
    </ImageView>

    <ScrollView
        android:layout_width="520dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_contents_expert"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_contents_expert"
        app:layout_constraintTop_toTopOf="@+id/comp_evaluation_contents_expert"
        android:layout_marginTop="45dp">

        <TextView
            android:id="@+id/expert_suggest"
            android:layout_width="520dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/comp_evaluation_contents_expert"
            app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_contents_expert"
            app:layout_constraintTop_toTopOf="@+id/comp_evaluation_contents_expert"
            android:textSize="18sp">
        </TextView>
    </ScrollView>



    <ImageView
        android:id="@+id/tip1"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tip2"
        app:layout_constraintEnd_toEndOf="@+id/tip2"
        app:layout_constraintBottom_toTopOf="@+id/tip2"
        android:layout_marginBottom="8dp"
        android:src="@drawable/tip1">
    </ImageView>

    <ScrollView
        android:layout_width="470dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@+id/tip1"
        app:layout_constraintEnd_toEndOf="@+id/tip1"
        app:layout_constraintBottom_toBottomOf="@+id/tip1"

        android:layout_marginBottom="25dp">
        <TextView
            android:id="@+id/expert_suggest1"
            android:layout_width="470dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp">
        </TextView>
    </ScrollView>

    <ImageView
        android:id="@+id/tip2"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_contents_expert"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_contents_expert"
        app:layout_constraintBottom_toBottomOf="@+id/comp_evaluation_contents_expert"
        android:layout_marginBottom="8dp"
        android:src="@drawable/tip2">
    </ImageView>

    <ScrollView
        android:layout_width="450dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/tip2"
        app:layout_constraintEnd_toEndOf="@id/tip2"
        app:layout_constraintBottom_toBottomOf="@id/tip2"
        android:layout_marginBottom="25dp">
        <TextView
            android:id="@+id/expert_suggest2"
            android:layout_width="470dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp">
        </TextView>
    </ScrollView>

    <TextView
        android:id="@+id/oil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_scalp"
        app:layout_constraintTop_toBottomOf="@+id/comp_evaluation_scalp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="항목"
        android:textSize="16dp"
        android:textColor="@color/white"
        >
    </TextView>
    <ImageView
        android:id="@+id/oil_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/oil"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_scalp"
        android:layout_marginTop="15dp"
        android:src="@drawable/oil_icon">
    </ImageView>

    <ImageView
        android:id="@+id/first_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/oil_icon"
        app:layout_constraintStart_toStartOf="@+id/oil_icon"
        app:layout_constraintEnd_toEndOf="@+id/oil_icon"
        android:layout_marginTop="15dp"
        android:src="@drawable/bad">
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/oil"
        app:layout_constraintEnd_toStartOf="@+id/corneous"
        app:layout_constraintTop_toTopOf="@id/oil"
        android:src="@drawable/contour5">
    </ImageView>

    <TextView
        android:id="@+id/corneous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_scalp"
        app:layout_constraintTop_toBottomOf="@+id/comp_evaluation_scalp"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_scalp"
        android:layout_marginTop="20dp"
        android:text="항목"
        android:textSize="16dp"
        android:textColor="@color/white">
    </TextView>
    <ImageView
        android:id="@+id/corneous_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/corneous"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_scalp"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_scalp"
        android:layout_marginTop="15dp"
        android:src="@drawable/corneous_icon">
    </ImageView>
    <ImageView
        android:id="@+id/second_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/corneous_icon"
        app:layout_constraintStart_toStartOf="@+id/corneous_icon"
        app:layout_constraintEnd_toEndOf="@+id/corneous_icon"
        android:layout_marginTop="15dp"
        android:src="@drawable/caution">
    </ImageView>
    <ImageView
        android:id="@+id/corneous2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/corneous"
        app:layout_constraintEnd_toStartOf="@+id/responsiveness"
        app:layout_constraintTop_toTopOf="@id/corneous"
        android:src="@drawable/contour5">

    </ImageView>

    <TextView
        android:id="@+id/responsiveness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/comp_evaluation_scalp"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_scalp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="항목"
        android:textSize="16dp"
        android:textColor="@color/white">
    </TextView>
    <ImageView
        android:id="@+id/responsiveness_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/responsiveness"
        app:layout_constraintEnd_toEndOf="@+id/comp_evaluation_scalp"
        android:layout_marginTop="15dp"
        android:src="@drawable/responsiveness_icon">
    </ImageView>
    <ImageView
        android:id="@+id/third_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/responsiveness_icon"
        app:layout_constraintStart_toStartOf="@+id/responsiveness_icon"
        app:layout_constraintEnd_toEndOf="@+id/responsiveness_icon"
        android:layout_marginTop="15dp"
        android:src="@drawable/usually">
    </ImageView>

    <ImageView
        android:id="@+id/management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/comp_evaluation_scalp"
        app:layout_constraintStart_toStartOf="@+id/comp_evaluation_scalp"
        android:layout_marginTop="210dp"
        android:src="@drawable/management">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/management"
        app:layout_constraintBottom_toBottomOf="@+id/management"
        android:layout_marginLeft="5dp"
        android:src="@drawable/evaluation_suggestion">
    </ImageView>



</androidx.constraintlayout.widget.ConstraintLayout>