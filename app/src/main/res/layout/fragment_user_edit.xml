<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.UserEditFragment">

    <ImageView
        android:id="@+id/edit_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/edit_background">
    </ImageView>

    <TextView
        android:id="@+id/text_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/edit_background"
        app:layout_constraintEnd_toEndOf="@+id/edit_background"
        app:layout_constraintTop_toTopOf="@+id/edit_background"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="고객 정보 수정 완료">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고객 정보가 정상적으로 수정되었습니다."
        app:layout_constraintStart_toStartOf="@+id/text_edit_title"
        app:layout_constraintEnd_toEndOf="@+id/text_edit_title"
        app:layout_constraintTop_toBottomOf="@+id/text_edit_title"
        android:layout_marginTop="30dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인 버튼을 터치하시면 처음 화면으로 이동합니다."
        app:layout_constraintStart_toStartOf="@+id/text_edit_title"
        app:layout_constraintEnd_toEndOf="@+id/text_edit_title"
        app:layout_constraintTop_toBottomOf="@+id/text_edit_title"
        android:layout_marginTop="55dp">
    </TextView>

    <ImageView
        android:id="@+id/user_edit_check_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_check_btn"
        app:layout_constraintStart_toStartOf="@id/edit_background"
        app:layout_constraintEnd_toEndOf="@+id/edit_background"
        app:layout_constraintBottom_toBottomOf="@+id/edit_background"
        android:layout_marginBottom="35dp">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>